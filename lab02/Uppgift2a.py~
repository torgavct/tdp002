#Uppgift 2a

# DEL A
text = str(input("Ange din text: "))

def frame (text):
    i = 0
    while i < 2:
        n = -4
        while n < len(text):
            print("*", end ="")
            n += 1 

        if i == 1:
            print("")
            break
        else:
            print("\n*", text, "*")
            i += 1

frame(text)

# DEL B
höjd = int(input("\nAnge Triangels höjd: "))

def triangle(höjd):
  for i in range(höjd):
      Rad = "*" * (2 * i + 1)
      print(Rad)
      
triangle(höjd)

#Del C
bredd = int(input("Ange Flaggans Bredd: "))

def flag(höjd, bredd):
    bredd = bredd * 20 // 2
    x = 0
   
    for n in range(16):
        if n == 8:
            print("")
        for i in range(bredd):
            print("*", end="")
            
        print(" ", end= "")
        x += 1
        if x == 2:
            print("")
            x = 0

flag(höjd, bredd)

    
    

